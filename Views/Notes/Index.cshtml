@model IEnumerable<NoteList.Models.Note>

@{
    ViewData["Title"] = "My Notes";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-4">
    <h2 class="fw-bold text-dark"><i class="bi bi-journal-text me-2"></i>My Notes</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
        <i class="bi bi-plus-lg me-1"></i> Create New Note
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
    @if (!Model.Any())
    {
        <div class="col-12 text-center mt-5">
            <div class="text-muted mb-3">
                <i class="bi bi-journal-x display-1"></i>
            </div>
            <h4 class="text-muted">You haven't created any notes yet.</h4>
            <p class="text-muted mb-4">Click the button above to start capturing your thoughts.</p>
        </div>
    }
    
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 note-card hover-lift transition-all">
                <div class="card-body d-flex flex-column p-4">
                    <h5 class="card-title fw-bold text-dark mb-3 text-truncate" title="@item.Title">
                        @item.Title
                    </h5>
                    
                    <p class="card-text text-muted flex-grow-1" style="display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical; overflow: hidden;">
                        @item.Content
                    </p>
                    
                    <div class="mt-4 pt-3 border-top d-flex justify-content-between align-items-center">
                        <small class="text-muted" title="@item.CreatedAt.ToString("f")">
                            <i class="bi bi-clock me-1"></i> @item.CreatedAt.ToString("MMM dd, yyyy")
                        </small>
                        <div class="btn-group btn-group-sm rounded-pill" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Edit Note">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete Note">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .note-card {
        border-radius: 12px;
        background-color: #fdfdfd;
    }
</style>
