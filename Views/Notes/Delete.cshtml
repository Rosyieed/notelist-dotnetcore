@model NoteList.Models.Note

@{
    ViewData["Title"] = "Delete Note";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card border-danger shadow-sm rounded-3">
            <div class="card-header bg-danger text-white py-3 rounded-top-3 px-4">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                    <h4 class="mb-0 fw-bold">Confirm Deletion</h4>
                </div>
            </div>
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-5">
                    <i class="bi bi-trash text-danger display-1 mb-3"></i>
                    <h5 class="text-dark fw-bold">Are you sure you want to delete this note?</h5>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>

                <div class="border rounded-3 p-4 bg-light mb-5">
                    <div class="mb-3">
                        <small class="text-uppercase text-muted fw-bold d-block mb-1">Title</small>
                        <div class="fs-5 fw-semibold text-dark">@Html.DisplayFor(model => model.Title)</div>
                    </div>
                    <div>
                        <small class="text-uppercase text-muted fw-bold d-block mb-1">Content Snippet</small>
                        <div class="text-secondary" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                            @Html.DisplayFor(model => model.Content)
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-uppercase text-muted fw-bold d-block mb-1">Created At</small>
                        <div class="text-secondary">@Model.CreatedAt.ToString("f")</div>
                    </div>
                </div>

                <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                        <i class="bi bi-arrow-left me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger px-5 rounded-pill fw-bold shadow-sm">
                        <i class="bi bi-trash-fill me-1"></i> Delete Forever
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
